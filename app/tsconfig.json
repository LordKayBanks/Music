{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "moduleResolution": "node",
    "rootDir": "src",
    "paths": {
      "~*": ["./src/*"],
      "#root/*": ["./src/*"],
      "#logos/*": ["./src/logos/*"],
      "#shared/*": ["./src/shared/*"]
    }
  },
  "include": ["global.d.ts", "declarations.d.ts"],
  "exclude": ["node_modules"]
}
